/* pages/repair/repair.wxss */
.wd-list{
    margin: 20rpx;
	padding:15rpx;
	width:280px;
	height:200px;
    background-color:#ffffff;box-shadow:0px 2px 4px 2px #DDDDDD;border-width: 0rpx;border-radius:15rpx;overflow:hidden;
}
.view_tupian_wenzi {
	height: 250rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	
  
	/* 边 */
	border: 3rpx solid #E0E3DA;
	box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
  
	background-color: #ffffff;
	margin: 30rpx;
  
	/* padding使得文字和图片不至于贴着边框 */
	padding: 30rpx;
  
  }
  
  /* 图片 */
  
  .image_1 {
	width: 120rpx;
	height: 120rpx;
  }
  
  /* 包裹两行文字 */
  
  .view_wenzi2 {
	width: 100%;
	margin-left: 25rpx;
	display: flex;
	flex-direction: column;
  }
  
  /* 小字 */
  
  .text_small {
	font-size: 30rpx;
	word-break: break-all;
	color: #7a7878;
	margin-top: 10rpx
  }

.text_big{
	color:green;
}

.accept{
	background-color: green;
	border: 1px black solid;
	width:80px;
	height: 30px;
	font-size: 15px;
	display:flex;
	justify-content: center;
	flex-direction: row;
	margin: 5px;
}
.refuse{
	background-color: rgb(194, 184, 184);
}